<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.josuecadillo.semana07sqltables" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.ListCompaniesActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCompanyActivity"
            android:label="@string/add_new_company"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.AddEmployeeActivity"
            android:label="@string/add_new_employee"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.ListEmployeesActivity"
            android:label="@string/all_employees"
            android:screenOrientation="portrait"
            />

        </application>

</manifest>
